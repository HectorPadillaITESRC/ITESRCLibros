<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ITESRCLibrosMAUI.Views.ListaView"
             Title="Lista de Libros">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Nuevo" Command="{Binding NuevoCommand}"></ToolbarItem>
    </ContentPage.ToolbarItems>
    <ListView ItemsSource="{Binding Libros}">
        <ListView.ItemTemplate>
            <DataTemplate>
                <ImageCell Text="{Binding Titulo}" Detail="{Binding Autor}" ImageSource="{Binding Portada}"></ImageCell>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
</ContentPage>